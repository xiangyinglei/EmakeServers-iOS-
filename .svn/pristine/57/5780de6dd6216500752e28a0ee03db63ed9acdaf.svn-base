//字体适配
#define DEFIN_FontSize(fonsize)\
\
static inline CGFloat FontSize(CGFloat fontSize){\
    if (ScreenWidth==320) {\
        return fontSize-2;\
    }else if (ScreenWidth==375){\
        return fontSize;\
    }else if (ScreenWidth==812){\
        return fontSize+3;\
    }else{\
        return fontSize+2;\
    }\
}\

